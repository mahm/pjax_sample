- {notice: 'alert alert-popup alert-info', alert: 'alert alert-popup alert-error'}.each do |type, class_str|
  - msg = self.send(type)
  - if msg.present?
    .alert-message{ class: class_str }
      %a.close{ href: '#', data: { dismiss: 'alert' } } x
      %p= t(msg) || msg
    :javascript
      $(function(){
        $('.alert-message').delay(3000).fadeOut(500);
      });
